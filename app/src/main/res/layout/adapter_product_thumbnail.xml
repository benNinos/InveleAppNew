<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data class = "AdapterProductThumbnailBinding">

        <variable
            name="adapterProductThumbnail"
            type="com.ninositsolution.inveleapp.search_everywhere.SearchEverywhereVM"/>

    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:baselineAligned="false">

            <RelativeLayout
                android:id="@+id/onClick"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:background="@color/white"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">

                <ImageView
                    android:id="@+id/product_img"
                    android:layout_centerHorizontal="true"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:scaleType="fitXY"
                    bind:image="@{adapterProductThumbnail.product_img}"
                    android:layout_gravity="center_horizontal"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/product_item_name"
                    android:layout_alignStart="@+id/product_img"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:layout_below="@+id/product_img"
                    android:textSize="@dimen/item_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@={adapterProductThumbnail.product_item_name}" />

                <LinearLayout
                    android:id="@+id/product_rate"
                    android:layout_below="@+id/product_item_name"
                    android:layout_alignStart="@+id/product_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/item_text_size"
                        android:text="@={adapterProductThumbnail.product_rate}"
                        android:textColor="@color/colorPrimary" />

                    <Space
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/product_delete_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/item_text_size"
                        android:text="@={adapterProductThumbnail.product_delete_rate}" />


                </LinearLayout>



                <LinearLayout
                    android:id="@+id/product_rating"
                    android:layout_below="@+id/product_rate"
                    android:layout_alignStart="@+id/product_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RatingBar
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="-8dp"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="@{adapterProductThumbnail.product_rating_float}"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:theme="@style/RatingBar"
                        style="?android:attr/ratingBarStyleSmall"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_12sdp"
                        android:text="@={adapterProductThumbnail.product_rating}"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/star_rating_num_size" />

                    <Space
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:layout_width="@dimen/_8sdp"
                        android:layout_height="@dimen/_8sdp"
                        app:srcCompat="@drawable/ic_heart_black"
                        android:layout_gravity="center_vertical"/>

                    <Space
                        android:layout_width="@dimen/_4sdp"
                        android:layout_height="match_parent" />

                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>

